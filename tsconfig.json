{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "./dist",
		"types": ["chrome", "node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
